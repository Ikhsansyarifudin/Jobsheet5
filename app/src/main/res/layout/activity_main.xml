<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/angka1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:text="@string/satu" />

    <TextView
        android:id="@+id/angka2"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignTop="@id/angka1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/angka1"
        android:text="@string/dua"
        android:background="@color/blue"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/angka3"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_alignTop="@id/angka1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/angka2"
        android:text="@string/tiga"
        android:background="@color/blue"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/angka4"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below="@id/angka3"
        android:layout_alignStart="@id/angka3"
        android:layout_marginStart="3dp"
        android:layout_marginTop="38dp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:text="@string/empat" />

    <TextView
        android:id="@+id/angka5"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below="@id/angka2"
        android:layout_alignStart="@id/angka2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="91dp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:text="@string/lima" />

    <TextView
        android:id="@+id/angka6"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below="@id/angka1"
        android:layout_alignStart="@id/angka1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="69dp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:text="@string/enam" />

    <TextView
        android:id="@+id/angka7"
        android:layout_width="338dp"
        android:layout_height="37dp"
        android:layout_below="@id/angka5"
        android:layout_alignStart="@id/angka5"
        android:layout_marginStart="-130dp"
        android:layout_marginTop="23dp"
        android:background="@color/blue"
        android:text="@string/tujuh"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/angka7"
        android:layout_alignStart="@id/angka7"
        android:layout_marginStart="91dp"
        android:layout_marginTop="51dp"
        android:text="@string/nama"
        android:textAlignment="center" />

</RelativeLayout>